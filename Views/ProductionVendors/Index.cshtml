@model IEnumerable<RCMMaps.Models.ProductionVendor>

@{
    ViewBag.Title = "Production Vendors";
}

<h2>Production Vendors</h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-success btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Vendor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor)
            </td>
            <td width="70px">
                <a href="@Url.Action("Edit", "ProductionVendors", new { id = item.ID })" class="btn btn-info btn-xs">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("Delete", "ProductionVendors", new { id = item.ID })" class="btn btn-danger btn-xs">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }

</table>
