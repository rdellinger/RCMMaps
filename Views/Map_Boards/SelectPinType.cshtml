@model RCMMaps.Models.Map_Boards

@{
    ViewBag.Title = "Select Pin Type";
}

<h2>Select</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Pin Type</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.MapID)
        @Html.HiddenFor(model => model.BoardID)

        <div class="form-group">
            @Html.LabelFor(model => model.PinTypeID, "Pin Type", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PinTypeID", "-- Select --")
                @Html.ValidationMessageFor(model => model.PinTypeID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />&nbsp;|&nbsp;@Html.ActionLink("Cancel", "Edit", "Maps", null, null, "boards", new { id = Model.MapID }, null)
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
