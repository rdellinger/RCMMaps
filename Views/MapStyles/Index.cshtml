@model IEnumerable<RCMMaps.Models.MapStyle>

@{
    ViewBag.Title = "Map Styles";
}

<h2>MapStyle</h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-success btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Saturation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lightness)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gamma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Map.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FeatureType.FeatureType1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
			<a href="@Url.Action("Details", "MapStyles", new { id = item.ID })">
				@Html.DisplayFor(modelItem => item.Hue)
			</a>
        </td>
        <td>
			<a href="@Url.Action("Details", "MapStyles", new { id = item.ID })">
				@Html.DisplayFor(modelItem => item.Saturation)
			</a>
        </td>
        <td>
			<a href="@Url.Action("Details", "MapStyles", new { id = item.ID })">
				@Html.DisplayFor(modelItem => item.Lightness)
			</a>
        </td>
        <td>
			<a href="@Url.Action("Details", "MapStyles", new { id = item.ID })">
				@Html.DisplayFor(modelItem => item.Gamma)
			</a>
        </td>
        <td>
			<a href="@Url.Action("Details", "MapStyles", new { id = item.ID })">
				@Html.DisplayFor(modelItem => item.Map.Title)
			</a>
        </td>
        <td>
			<a href="@Url.Action("Details", "MapStyles", new { id = item.ID })">
				@Html.DisplayFor(modelItem => item.FeatureType.FeatureType1)
			</a>
        </td>
        <td width="70px">
			<a href="@Url.Action("Edit", "MapStyles", new { id = item.ID })" class="btn btn-info btn-xs">
				<span class="glyphicon glyphicon-pencil"></span>
            </a>
            <a href="@Url.Action("Delete", "MapStyles", new { id = item.ID })" class="btn btn-danger btn-xs">
				<span class="glyphicon glyphicon-trash"></span>
            </a>
        </td>
    </tr>
}

</table>
