@model RCMMaps.Models.MapStyle

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Map Style</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.MapID)

        <div class="form-group">
            @Html.LabelFor(model => model.FeatureTypeID, "Feature", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FeatureTypeID", "-- Select --") &nbsp; @Html.ActionLink("Edit Options", "Index", "FeatureTypes")
                @Html.ValidationMessageFor(model => model.FeatureTypeID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Hue, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Hue)
                @Html.ValidationMessageFor(model => model.Hue)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Saturation, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Saturation)
                @Html.ValidationMessageFor(model => model.Saturation)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lightness, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Lightness)
                @Html.ValidationMessageFor(model => model.Lightness)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Gamma, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Gamma)
                @Html.ValidationMessageFor(model => model.Gamma)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />&nbsp;|&nbsp;@Html.ActionLink("Cancel", "Edit", "Maps", null, null, "appearance", new { id = Model.MapID }, null)
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
